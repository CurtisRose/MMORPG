{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://deeperskilling.local/schema/crafting-skill.schema.json",
  "title": "Crafting Skill Config",
  "type": "object",
  "additionalProperties": false,
  "required": ["skill", "recipes"],
  "properties": {
    "skill": {
      "type": "string",
      "minLength": 1
    },
    "recipes": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["id", "requiredLevel", "durationMs", "successChance", "xp", "inputs", "outputs"],
        "properties": {
          "id": { "type": "string", "minLength": 1 },
          "requiredLevel": { "type": "integer", "minimum": 1 },
          "durationMs": { "type": "integer", "minimum": 100 },
          "successChance": { "type": "number", "minimum": 0, "maximum": 1 },
          "xp": { "type": "number", "minimum": 0 },
          "inputs": {
            "type": "array",
            "minItems": 1,
            "items": {
              "type": "object",
              "additionalProperties": false,
              "required": ["itemId", "quantity"],
              "properties": {
                "itemId": { "type": "string", "minLength": 1 },
                "quantity": { "type": "integer", "minimum": 1 }
              }
            }
          },
          "outputs": {
            "type": "array",
            "minItems": 1,
            "items": {
              "type": "object",
              "additionalProperties": false,
              "required": ["itemId", "quantity"],
              "properties": {
                "itemId": { "type": "string", "minLength": 1 },
                "quantity": { "type": "integer", "minimum": 1 }
              }
            }
          }
        }
      }
    },
    "messages": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "locked": { "type": "string" },
        "missingItems": { "type": "string" },
        "success": { "type": "string" },
        "failure": { "type": "string" }
      }
    }
  }
}
